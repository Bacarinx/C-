@model MVC.Models.Contato

@{
  ViewData["Title"] = "Editar Contato";
}

<h1>Editar Contato</h1>
<hr>

<div>
  <form asp-action="Editar">
    <div class="form-group">
      <label asp-for="Nome" class="control-label">Nome</label>
      <input asp-for="Nome" class="form-control border-3 border-black border-opacity-25"/>
    </div>
    <div class="form-group">
      <label asp-for="Telefone" class="control-label">Telefone</label>
      <input asp-for="Telefone" class="form-control border-3 border-black border-opacity-25"/>
    </div>
    <div class="form-group">
      <label asp-for="Ativo" class="control-label">Ativo</label>
      <input asp-for="Ativo" class="form-control form-check-input"/>
    </div>

    <div>
      <input type="submit" value="Editar" class="btn btn-dark mt-2">
    </div>
  </form>
</div>